<h1>Add a new restaurant:</h1>
<%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name, error: 'The name is mandatory, please specify one' %>
  <%= f.input :address, error: 'The address is mandatory, please specify one'  %>
  <%= f.input :phone_number, as: :string, placeholder: '01 20 20 20 20', error: 'The phone number is mandatory, please specify one'   %>
  <%= f.input :category, as: :select, collection: ["chinese", "italian", "japanese", "french", "belgian"], prompt: 'Select a category', error: 'The category is mandatory, please specify one'  %>
  <%= f.submit "Add the restaurant", class: "btn btn-primary" %>
<% end %>